  "homepage": "https://github.com/davidsneighbour/hugo-modules/tree/main/modules/headerimage",
  "dependencies": {
    "@davidsneighbour/markdownlint-config": "^2024.4.7",
    "@davidsneighbour/release-config": "^2024.4.7",
    "@davidsneighbour/tools": "^2024.4.7"
  },
  "scripts": {
    "clean": "run-p clean:*",
    "clean:npm": "rimraf node_modules package-lock.json",
