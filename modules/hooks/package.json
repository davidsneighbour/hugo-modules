{
  "name": "@davidsneighbour/hugo-hooks",
  "description": "Hooks for GoHugo layouts. An easy way for theme developers to let users add to their themes.",
  "version": "1.2024.14",
  "license": "MIT",
  "private": true,
  "repository": "https://github.com/davidsneighbour/hugo-modules",
  "author": "Patrick Kollitsch <patrick@davids-neighbour.com>",
  "bugs": {
    "url": "https://github.com/davidsneighbour/hugo-modules/issues"
  },
  "homepage": "https://github.com/davidsneighbour/hugo-modules/tree/main/modules/hooks",
  "dependencies": {
    "@davidsneighbour/release-config": "2024.4.2",
    "@davidsneighbour/tools": "2024.4.2"
  },
  "scripts": {
    "clean": "run-p clean:*",
    "clean:hugo": "resources public",
    "clean:npm": "rimraf node_modules package-lock.json",
    "release": "commit-and-tag-version --release-as patch -a -t \"modules/hooks/v\" --releaseCommitMessageFormat \"chore(release): modules/hooks/v{{currentTag}}\" && ./bin/repo/release/postrelease",
    "release:minor": "commit-and-tag-version --release-as minor -a -t \"modules/hooks/v\" --releaseCommitMessageFormat \"chore(release): modules/hooks/v{{currentTag}}\" && ./bin/repo/release/postrelease"
  },
  "type": "module"
}
