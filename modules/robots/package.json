{
  "name": "@davidsneighbour/hugo-robots",
  "description": "Configurable robots.txt for Hugo",
  "version": "1.2023.6",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidsneighbour/hugo-modules.git"
  },
  "author": "Patrick Kollitsch <patrick@davids-neighbour.com> (https://davids-neighbour.com)",
  "bugs": {
    "url": "https://github.com/davidsneighbour/hugo-modules/issues"
  },
  "homepage": "https://github.com/davidsneighbour/hugo-modules/tree/main/modules/robots",
  "dependencies": {
    "@davidsneighbour/configurations": "^5.5.19"
  },
  "scripts": {
    "clean": "run-p clean:*",
    "clean:npm": "rimraf node_modules package-lock.json",
    "release": "commit-and-tag-version --release-as patch -a -t \"modules/robots/v\" --releaseCommitMessageFormat \"chore(release): modules/robots/v{{currentTag}}\" && ./bin/release/postrelease",
    "release:minor": "commit-and-tag-version --release-as minor -a -t \"modules/robots/v\" --releaseCommitMessageFormat \"chore(release): modules/robots/v{{currentTag}}\" && ./bin/release/postrelease",
    "update": "npm-check-updates -u && npm install && git add package*"
  }
}
