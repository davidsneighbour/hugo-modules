{
  "name": "@davidsneighbour/hugo-pictures",
  "description": "Image generation, responsive image formats and optimized loading for GoHugo",
  "version": "1.2023.19",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidsneighbour/hugo-modules.git"
  },
  "author": "Patrick Kollitsch <patrick@davids-neighbour.com>",
  "bugs": {
    "url": "https://github.com/davidsneighbour/hugo-modules/issues"
  },
  "homepage": "https://github.com/davidsneighbour/hugo-modules/tree/main/modules/pictures",
  "dependencies": {
    "@davidsneighbour/configurations": "^5.5.17"
  },
  "scripts": {
    "build": "",
    "clean": "run-p clean:*",
    "clean:hugo": "rimraf dev/public dev/resources dev/.hugo_build.lock hugo.log",
    "clean:npm": "rimraf node_modules package-lock.json",
    "release": "commit-and-tag-version --release-as patch -a -t \"modules/pictures/v\" --releaseCommitMessageFormat \"chore(release): modules/pictures/v{{currentTag}}\" && ./bin/release/postrelease",
    "release:minor": "commit-and-tag-version --release-as minor -a -t \"modules/pictures/v\" --releaseCommitMessageFormat \"chore(release): modules/pictures/v{{currentTag}}\" && ./bin/release/postrelease",
    "update": "npm-check-updates -u && npm install && git add package*"
  }
}
